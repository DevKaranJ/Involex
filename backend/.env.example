# Involex Backend Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/involex_db"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins
CORS_ORIGINS=chrome-extension://*,https://mail.google.com,https://outlook.live.com,https://outlook.office.com

# Practice Management APIs (for future phases)
CLEO_API_URL=
CLEO_API_KEY=
PRACTICE_PANTHER_API_URL=
PRACTICE_PANTHER_API_KEY=
MY_CASE_API_URL=
MY_CASE_API_KEY=
