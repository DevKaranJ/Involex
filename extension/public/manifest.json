{
  "manifest_version": 3,
  "name": "Involex - AI Legal Billing",
  "version": "1.0.0",
  "description": "AI-powered billing automation for lawyers. Automatically capture and log email communications as billable entries.",
  
  "permissions": [
    "storage",
    "activeTab",
    "identity",
    "notifications",
    "scripting"
  ],
  
  "host_permissions": [
    "https://mail.google.com/*",
    "https://outlook.live.com/*",
    "https://outlook.office.com/*",
    "https://api.involex.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content/gmail.js"],
      "css": ["content/gmail.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://outlook.live.com/*", 
        "https://outlook.office.com/*",
        "https://outlook.office365.com/*"
      ],
      "js": ["content/outlook.js"],
      "css": ["content/outlook.css"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "Involex - AI Legal Billing",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "options_page": "options/index.html",
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "components/*",
        "icons/*"
      ],
      "matches": [
        "https://mail.google.com/*",
        "https://outlook.live.com/*",
        "https://outlook.office.com/*",
        "https://outlook.office365.com/*"
      ]
    }
  ],
  
  "oauth2": {
    "client_id": "YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/gmail.readonly"
    ]
  }
}
