{
  "name": "involex",
  "version": "1.0.0",
  "description": "AI-Powered Legal Billing Chrome Extension",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:extension\"",
    "dev:extension": "cd extension && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:extension && npm run build:backend",
    "build:extension": "cd extension && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "cd backend && npm start",
    "test": "npm run test:extension && npm run test:backend",
    "test:extension": "cd extension && npm test",
    "test:backend": "cd backend && npm test",
    "lint": "npm run lint:extension && npm run lint:backend",
    "lint:extension": "cd extension && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "install:all": "npm install && cd extension && npm install && cd ../backend && npm install",
    "clean": "rm -rf node_modules extension/node_modules backend/node_modules extension/dist",
    "package:extension": "cd extension && npm run build && npm run package"
  },
  "keywords": [
    "chrome-extension",
    "legal",
    "billing",
    "automation",
    "ai",
    "law",
    "practice-management",
    "gmail",
    "outlook"
  ],
  "author": "DevKaranJ",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
